<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="normalDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" lazy-init="true">
        <property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver"/>
        <property name="url" value="jdbc:derby:/db/normal_variation"/>
        <!-- <property name="url" value="jdbc:derby:/Users/sarah.killcoyne/workspace/IGCSA/derby-db/normal_variation"/> -->
        <!--property name="driverClassName" value="com.mysql.jdbc.Driver"/ -->
        <!--property name="url" value="jdbc:mysql://localhost:3306/normal_variation"/ -->
        <property name="username" value="igcsa"/>
        <property name="password" value=""/>
    </bean>

    <bean id="VariationDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCVariationDAO" lazy-init="true">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="FragmentDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCFragmentDAO" lazy-init="true">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="GCBinDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCGCBinDAO" lazy-init="true">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="SizeDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCSizeDAO" lazy-init="true">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="SNVDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCSNVProbabilityDAO" lazy-init="true">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="variantUtils" class="org.lcsb.lu.igcsa.utils.VariantUtils" lazy-init="true">
        <constructor-arg ref="VariationDAO"/>
        <constructor-arg ref="SizeDAO"/>
        <constructor-arg ref="SNVDAO"/>
    </bean>

</beans>
