<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Database for the NORMAL GENOME fragment tables, this doesn't have to be mysql.  These aren't particularly large -->
    <bean id="normalDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${normal.genome.driver}"/>
        <property name="url" value="${normal.genome.url}"/>
        <property name="username" value="${normal.genome.user}"/>
        <property name="password" value="${normal.genome.pwd}"/>
    </bean>

    <bean id="VariationDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCVariationDAO">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="FragmentDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCFragmentDAO">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="GCBinDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCGCBinDAO">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="SizeDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCSizeDAO">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>

    <bean id="SNVDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCSNVProbabilityDAO">
        <property name="dataSource" ref="normalDataSource"/>
    </bean>


    <!-- Database for CANCER GENOME tables?? -->
    <bean id="karyotypeDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${karyotype.genome.driver}"/>
        <property name="url" value="${karyotype.genome.url}"/>
        <property name="username" value="${karyotype.genome.user}"/>
        <property name="password" value="${karyotype.genome.pwd}"/>
    </bean>

    <bean id="BreakpointDAO" class="org.lcsb.lu.igcsa.database.JDBCBreakpointDAO">
        <property name="dataSource" ref="karyotypeDataSource"/>
    </bean>

</beans>