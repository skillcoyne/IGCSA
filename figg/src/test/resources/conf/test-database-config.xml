<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Database for the fragment tables, this doesn't have to be mysql.  These aren't particularly large -->
    <bean id="testDS" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/normal_variation"/>
        <property name="username" value="root"/>
        <property name="password" value=""/>
    </bean>

    <bean id="testFragmentDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCFragmentDAO">
        <property name="dataSource" ref="testDS"/>
    </bean>

    <bean id="testVariationDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCVariationDAO">
        <property name="dataSource" ref="testDS"/>
    </bean>

    <bean id="testGCBinDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCGCBinDAO">
        <property name="dataSource" ref="testDS"/>
    </bean>

    <bean id="testSizeDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCSizeDAO">
        <property name="dataSource" ref="testDS"/>
    </bean>

    <bean id="testSNVDAO" class="org.lcsb.lu.igcsa.database.sql.JDBCSNVProbabilityDAO">
        <property name="dataSource" ref="testDS"/>
    </bean>

</beans>