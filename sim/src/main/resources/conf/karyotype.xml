    <bean id="karyotype" class="org.lcsb.lu.igcsa.genome.Karyotype" lazy-init="true">
        <constructor-arg name="ploidyDist" ref="ploidy${ploidy.distribution}"/>
        <constructor-arg name="aberrationDist" ref="abr${aberration.distribution}"/>
    </bean>


    <!-- Distribution objects -->
    <bean id="ploidyNormal"  class="org.lcsb.lu.igcsa.dist.ContinuousDistribution" lazy-init="true">
        <constructor-arg name="mean" value="${ploidy.mean}"/>
        <constructor-arg name="stdev" value="${ploidy.stdev}"/>
    </bean>

