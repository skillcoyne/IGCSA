## FREQUENCIES NEED TO BE CHECKED/CALC'D ##

# Basic configuration

# Genome model to use
mod=hg18
# window size (to calculate GC content)
win=100
# K-mer model
kmer=2
# noise variation
noise=100
# Homo/Hetero frequency
homo=0.7
# Frequency of desviation from average
freq_avg=0.8

# SNP parameters
## Frequency of SNP (per base)
freq_snp=0.0013
## Change table for SNPs (RefSNP:freq) ## Venter's genome data
## Sum of changes for a base (AN, CN, TN, GN) must be 1
dis_snp=AC:0.2,AG:0.7,AT:0.1,AA:0,CC:0,CA:0.2,CG:0.2,CT:0.6,GG:0,GA:0.6,GC:0.2,GT:0.2,TT:0,TA:0.1,TC:0.7,TG:0.2

# Insertions parameters ## Venter's genome data
## Frequency of insertions (per base)
freq_ins=0.001345
## Minimal insertion (bases)
min_ins=1
## Maximal insertion (bases)
