<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Properties -->
    <bean id="normalGenomeProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="ignoreResourceNotFound">
            <value>true</value>
        </property>
        <property name="locations">
            <list>
                <value>classpath:props/genome.properties</value>
            </list>
        </property>
    </bean>

    <bean id="cancerGenomeProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="ignoreResourceNotFound">
            <value>true</value>
        </property>
        <property name="locations">
            <list>
                <value>classpath:props/cancer.properties</value>
            </list>
        </property>
    </bean>

</beans>