<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- Database for the NORMAL GENOME fragment tables, this doesn't have to be mysql.  These aren't particularly large -->
    <bean id="normalDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${normal.genome.driver}"/>
        <property name="url" value="jdbc:mysql://${normal.genome.host}:${normal.genome.port}/${normal.genome.db}"/>
        <property name="username" value="${normal.genome.user}"/>
        <property name="password" value="${normal.genome.pwd}"/>
    </bean>

    <bean id="FragmentDAO" class="org.lcsb.lu.igcsa.database.JDBCFragmentVariationDAO">
        <property name="dataSource" ref="normalDataSource"/>
        <property name="tableName" value="variations"/>
    </bean>

    <bean id="GCBinDAO" class="org.lcsb.lu.igcsa.database.JDBCGCBinDAO">
        <property name="dataSource" ref="normalDataSource"/>
        <property name="tableName" value="gc_bins"/>
    </bean>

    <bean id="SizeDAO" class="org.lcsb.lu.igcsa.database.JDBCSizeDAO">
        <property name="dataSource" ref="normalDataSource"/>
        <property name="tableName" value="variation_size_prob"/>
    </bean>


